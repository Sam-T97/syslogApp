@page
@model syslogSite.Areas.Identity.Pages.Account.Manage.ChangeUserAccessModel
@{
    ViewData["Title"] = "Change User Access Level";
}
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control">
                    <option value="Select a role" selected disabled hidden></option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Name">@role</option>
                    }
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Change User Access</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use this page to change a users access.</h4>
            <hr />
            <p>
                Users within the standard group will only have access to the reporting functions of the system.<br/>
                This is ideal for managerial accounts who do not need to see technical data. 
            </p>
            <p>
                In addition to standard. Users in the engineer group will be able to administrate devices within the system. 
            </p>
            <p>
                In addition to engineer. Users within the admin group will have the ability to create and manage users within the system.
            </p>
        </section>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}