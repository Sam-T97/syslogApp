@page
@model syslogSite.Pages.RegisterRemoteDeviceModel

@{
    ViewData["Title"] = "RegisterRemoteDevice";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="text-center">
<h1>Register Remote Device</h1>
    </div>
<h4>Target Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <text>@Model.feedback</text>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Device" class="control-label"></label>
                <select asp-for="Device" class="form-control" asp-items="ViewBag.DeviceID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <p>Select the network device you will be attaching this remote device to. 
            Once you register the device, download <a href="PIBuild.zip" target="_blank">this</a> file which can be used to build the PI in PIBakery</p>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
