@page
@model syslogSite.Pages.RemoveRemoteDeviceModel

@{
    ViewData["Title"] = "RemoveRemoteDevice";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="text-center">
<h1>Remove Remote Device</h1>
    </div>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Remote Device</h4>
    <hr />
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RemoteDeviceID" class="control-label"></label>
                <select asp-for="RemoteDeviceID" class="form-control" asp-items="ViewBag.RemoteDeviceID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </form>
    </div>
</div>
